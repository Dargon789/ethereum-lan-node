{
    "name": "fuzd-service",
    "dependencies": {
        "fuzd-cf-worker": "^0.10.0",
        "node-cron": "^3.0.2",
        "set-defaults": "^0.0.5",
        "toml": "^3.0.0",
        "wait-on": "^8.0.2",
        "wrangler": "^4.0.0"
        
    },
    "scripts": {
        "prepare": "set-defaults .",
        "dev:cron": "node cron.js",
        "dev:worker": "echo 'waiting for contracts.json...'; wait-on contracts.json && node generate-env.js && wrangler dev -c ./wrangler.toml --ip 0.0.0.0 --port 34002",
        "dev": "pnpm run /^dev:.*/",
        "wrangler": "wrangler"
    }
}